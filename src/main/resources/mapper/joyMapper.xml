<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.joy.record.mapper.JoyMapper">

    <!-- 취미 목록 조회 -->
    <select id="selectJoyList" parameterType="HashMap" resultType="Joy">
        SELECT
         JOY_ID
        , JOY_NAME
        , DETAIL
        , DEL_YN
        FROM JOY
        <where>
            <if test='del_yn != null and  del_yn != ""'>
                AND DEL_YN = #{del_yn}
            </if>
        </where>
    </select>


    <!-- 취미 등록 -->
    <insert id="insertJoy" parameterType="HashMap">
        INSERT INTO JOY
        (JOY_ID
        , JOY_NAME
        , DETAIL
        , DEL_YN
        )
        VALUES
        (
        NEXT VALUE FOR [dbo].[joy_seq]
        , #{joy_name}
        , #{detail}
        , 'N'
        )
    </insert>

    <!-- 취미 수정 -->
    <update id="updateJoy" parameterType="HashMap" >
        UPDATE JOY
        <set>
            <if test='joy_name != null and joy_name != ""'>
                JOY_NAME = #{joy_name},
            </if>
            <if test='detail != null and detail != ""'>
                DETAIL = #{detail},
            </if>
        </set>
        WHERE JOY_ID = #{joy_id}
    </update>

    <!-- 취미 삭제 (DEL_YN : Y 수정) -->
    <update id="deleteJoy" parameterType="HashMap" >
        UPDATE JOY
        <set>
            DEL_YN = 'Y'
        </set>
        WHERE JOY_ID = #{joy_id}
    </update>
</mapper>